doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    title Đơn vị tính
    link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans')
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://fonts.googleapis.com/icon?family=Material+Icons')
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js')
    link(rel='stylesheet' href='/css/quy_dinh/don-vi-tinh.css')
.container-lg
    .table-responsive
        .table-wrapper
            .table-title
                .row
                    .col-sm-2
                        a.goback(href='/quy-dinh')
                            i.fa.fa-chevron-circle-left.fa-3x(aria-hidden='true')
                    .col-sm-8.text-center
                        h1 Danh sách đơn vị tính

            .table-title
                .row
                    .col-sm-2
                    .col-sm-8
                        table.table.table-bordered
                            thead
                                tr
                                    th Tên đơn vị tính
                                    th Action
                            tbody
                                each DonViTinh in ArrayOfDonViTinh
                                    tr
                                        td= DonViTinh.TenDVT
                                        td
                                            a.edit(href=`/quy-dinh/don-vi-tinh/edit/${DonViTinh.MaDVT}`)
                                                i.material-icons &#xE254;
                                            a.delete(href=`/quy-dinh/don-vi-tinh/delete/${DonViTinh.MaDVT}` onclick='return confirm("are you sure?")')
                                                i.material-icons &#xE872;

            .table-title
                .row
                    .col-sm-2
                    .col-sm-8.align-self-end
                        a(href='/quy-dinh/don-vi-tinh/create')
                            button.btn.btn-info.add-new(type='button')
                                i.fa.fa-plus
                                |  Thêm đơn vị tính mới
                    .col-sm-2
